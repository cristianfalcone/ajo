{
	"name": "ajo",
	"version": "0.1.30",
	"description": "ajo is a JavaScript view library for building user interfaces",
	"type": "module",
	"types": "./types.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"exports": {
		".": {
			"types": "./types.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./context": {
			"types": "./types.ts",
			"import": "./dist/context.js",
			"require": "./dist/context.cjs"
		},
		"./html": {
			"types": "./types.ts",
			"import": "./dist/html.js",
			"require": "./dist/html.cjs"
		}
	},
	"files": [
		"dist",
		"context.js",
		"html.js",
		"index.js",
		"LLMs.md",
		"types.ts"
	],
	"scripts": {
		"test": "vitest --run",
		"build": "vite build",
		"bump": "pnpm version patch && git push && git push --tags",
		"release": "pnpm test && pnpm build && pnpm bump && pnpm publish"
	},
	"devDependencies": {
		"@types/node": "25.2.3",
		"happy-dom": "20.6.1",
		"vite": "7.3.1",
		"vite-tsconfig-paths": "6.1.1",
		"vitest": "4.0.18"
	},
	"keywords": [
		"ui",
		"frontend",
		"web",
		"dom",
		"jsx"
	],
	"repository": "cristianfalcone/ajo",
	"author": "Cristian Falcone",
	"license": "ISC",
	"bugs": "https://github.com/cristianfalcone/ajo/issues",
	"homepage": "https://github.com/cristianfalcone/ajo#readme"
}
